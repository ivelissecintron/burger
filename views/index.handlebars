<h1>Welcome to the burger joint!</h1>

<main>
  <div class="container">
    <div class="row">
      <h2>Burger Menu</h2>
        <div class="col s6">
          {{#each burgers}}
            {{#unless this.devoured}}
              <div>
                <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                  <button type="submit" class='burgermenu'> {{this.burger_name}}</button>
                </form>
              </div>
            {{/unless}}
          {{/each}}
      </div>
    </div>  

    <div class="row">
      <h2>Devoured Burgers</h2>  
        <div class="col s6">
          {{#each burgers}}
            {{#if this.devoured}}
              <div>
                <form action="/burgers/{{this.id}}?_method=PUT" method="POST">                                        
                  <button type="submit" class="burgerdevoured">{{this.burger_name}}</button>
                </form>
              </div>
              {{/if}}
            {{/each}}
        </div>
    </div>
  </div> 
</main>

<h3>Add A Burger To the Menu</h3>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name">
      <button type="submit" class="addburger">Add The Burger</button>
    </form>
  </div>
</div>